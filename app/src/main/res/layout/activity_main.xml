<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"


    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:gravity="bottom"
    sothree:umanoPanelHeight="0dp"
    sothree:umanoClipPanel="true"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoParallaxOffset="0dp"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoScrollableView="@+id/list"



    tools:context="com.home.khalil.bottomsheet.MainActivity">

    <FrameLayout
        android:id="@+id/frame_main"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment

            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


        <RelativeLayout
            android:layout_marginTop="40dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/shape"
               android:layout_marginTop="6dp"
               android:layout_width="40dp"
               android:layout_height="65dp"
               android:background="@drawable/rect"
               />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                sothree:civ_border_width="1dp"
                android:layout_marginLeft="10dp"
                sothree:civ_border_color="#ffffff"

                android:layout_width="75dp"
                android:layout_height="75dp" />
        </RelativeLayout>


        <RelativeLayout
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
           
        android:layout_gravity="right|top"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/location"
            android:layout_marginTop="30dp"

            android:backgroundTint="#C2185B"
            sothree:borderWidth="0dp"
            sothree:elevation="5dp"
            sothree:useCompatPadding="true"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_location"
            android:layout_height="wrap_content" />



    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/realtive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"



            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/click"

                sothree:useCompatPadding="true"
                android:layout_marginTop="100dp"
                android:src="@drawable/ic_prefs"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_height="wrap_content" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F06292"
                android:layout_below="@+id/click"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_hand"
                sothree:useCompatPadding="true"
                />

            </RelativeLayout>




    </FrameLayout>





    <RelativeLayout
        android:background="#44ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/dragView">

       <!-- <ImageView
            android:id="@+id/collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_collapse"
            android:layout_centerHorizontal="true"





             />-->


        <Button

            android:layout_width="match_parent"
            android:background="@drawable/done_selector"
            
            android:textColor="#ffffff"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:text="Done"
            android:textSize="15sp"
            android:id="@+id/pref_done"
            />

        <android.support.v7.widget.RecyclerView

            android:id="@+id/recycler_view_category"
            android:layout_width="match_parent"
            android:layout_below="@+id/pref_done"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

    </RelativeLayout>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>
