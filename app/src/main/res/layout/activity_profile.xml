<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.home.khalil.bottomsheet.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/border_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#77d3d3d3"

        android:paddingBottom="1dp"

        >

        <android.support.v7.widget.Toolbar
            android:title="Settings"
            android:titleTextColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/prof_toolbar"

            android:background="#fafafa"



            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">




        </android.support.v7.widget.Toolbar>
    </RelativeLayout>


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="@android:color/transparent"
        />


   <!-- <TextView
        android:layout_marginTop="10dp"
      android:layout_toRightOf="@+id/btn_back"
        android:id="@+id/text_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Settings"
        android:textSize="18sp"


        />

    <View
        android:id="@+id/view_prof"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/profile_rect"
        android:backgroundTint="#77d3d3d3"
        />-->

    <TextView
        android:id="@+id/text_account"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/border_prof"
        android:text="My Account"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"

        />

    <View
        android:id="@+id/view_prof2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_account"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        />




    <Button

        android:layout_alignParentRight="true"

        android:layout_width="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Log Out"
        android:textSize="13sp"
        android:background="@android:color/transparent"
        android:id="@+id/btn_sign_out"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@id/view_prof2"
        android:id="@+id/profile_pic"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        sothree:civ_border_width="1dp"
        sothree:civ_border_color="#ffffff"
        android:src="@drawable/electronics3"
        android:layout_width="75dp"
        android:layout_height="75dp"

      />

    <TextView
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khalil Faraj"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:id="@+id/text_name"
        android:layout_below="@+id/view_prof2"
        android:layout_toRightOf="@+id/profile_pic"
        />
    <TextView
        android:layout_below="@+id/text_name"
        android:layout_toRightOf="@+id/profile_pic"
        android:text="khalilfaraj22@gmail.com"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_email"
        />


    <TextView
        android:id="@+id/text_prefs"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_pic"
        android:text="My Preferences"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"

        />

    <View
        android:id="@+id/view_prof3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_prefs"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        />






    <RelativeLayout
        android:background="#F06292"
        android:layout_marginTop="15dp"
        android:id="@+id/amerc"
        android:layout_below="@+id/view_prof3"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView

            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="American"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:id="@+id/textView" />

        <ImageView
            android:layout_marginRight="5dp"
            android:id="@+id/status1"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/sleep"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/holo_blue_light"

        android:id="@+id/cafe"
        android:layout_below="@+id/amerc"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:layout_marginStart="20dp"

            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Cafe"
            android:textSize="25sp"
            />


        <ImageView
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:id="@+id/status2"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/sleep"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/holo_purple"

        android:id="@+id/chinese"
        android:layout_below="@+id/cafe"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            android:textSize="25sp"
            />

        <ImageView
            android:layout_marginRight="5dp"
            android:id="@+id/status3"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/sleep"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/holo_green_light"
        android:id="@+id/dessert"
        android:layout_below="@+id/chinese"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Dessert"
            android:textSize="25sp"
            />

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:id="@+id/status4"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/sleep"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <RelativeLayout
        android:background="@android:color/holo_orange_dark"
        android:id="@+id/fastfood"
        android:layout_below="@+id/dessert"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FastFood"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_marginRight="5dp"
            android:id="@+id/status5"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/sleep"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:background="#FFEA00"
        android:id="@+id/italian"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/fastfood"


        >

        <TextView
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Italian"
            android:textSize="25sp"
            />


        <ImageView
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:id="@+id/status6"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/sleep"
            android:layout_height="wrap_content" />

    </RelativeLayout>

        <RelativeLayout
            android:background="@android:color/holo_red_light"
            android:id="@+id/lebanese"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/italian"


            >

            <TextView
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Lebanese"
                android:textSize="25sp"
                />


            <ImageView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:id="@+id/status7"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/sleep"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:background="#00FFFF"
            android:id="@+id/sushi"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/lebanese"


            >

            <TextView
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Sushi"
                android:textSize="25sp"
                />


            <ImageView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:id="@+id/status8"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/sleep"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>


</ScrollView>
